<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/relativelayout_talk_mymsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13.33dp"
        android:layout_marginBottom="13.33dp"
        android:gravity="right" >

    	<LinearLayout
    	    android:id="@+id/linearlayout_talk_mymsg"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentTop="true"
    	    android:layout_alignParentRight="true"
    	    android:layout_marginLeft="13.33dp"
    	    android:background="@drawable/list_talk_outgoing"
    	    android:orientation="vertical" >
    	        
    	    <TextView
    	        android:id="@+id/textView_talk_myname"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:textColor="@color/color_talk_name"
    	        android:layout_marginTop="13.33dp"
    	        android:layout_marginLeft="13.33dp"
    	        android:layout_marginRight="46.67dp"
    	        android:textSize="@dimen/talk_name_text_size"/>
    	    <TextView
    	        android:id="@+id/textView_talk_mymsg"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_marginTop="13.33dp"
        		android:layout_marginLeft="13.33dp"
        		android:layout_marginRight="46.67dp"
    	        android:textColor="@color/color_talk_msg"
    	        android:textSize="@dimen/talk_msg_text_size" />

    	    <TextView
    	        android:id="@+id/textView_talk_mytime"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="right"
    	        android:layout_marginTop="13.33dp"
    	        android:layout_marginBottom="13.33dp"
    	        android:layout_marginLeft="13.33dp"
        		android:layout_marginRight="46.67dp"
    	        android:textColor="@color/color_talk_time"
    	        android:textSize="@dimen/talk_time_text_size" />
    	</LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_talk_yourmsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13.33dp"
        android:layout_marginBottom="13.33dp"
        android:gravity="left">
    	
        <LinearLayout
        android:id="@+id/linearlayout_talk_yourmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="13.33dp"
        android:background="@drawable/list_talk_receive"
        android:orientation="vertical" >

            <TextView
    	        android:id="@+id/textView_talk_yourname"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_marginTop="13.33dp"
    	        android:layout_marginLeft="46.67dp"
    	        android:layout_marginRight="13.33dp"
    	        android:textColor="@color/color_talk_name"
    	        android:textSize="@dimen/talk_name_text_size"/>
            
	        <TextView
	            android:id="@+id/textView_talk_yourmsg"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="13.33dp"
	            android:layout_marginLeft="46.67dp"
        		android:layout_marginRight="13.33dp"
	            android:textColor="@color/color_talk_msg"
	            android:textSize="@dimen/talk_msg_text_size" />
	
	        <TextView
	            android:id="@+id/textView_talk_yourtime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:layout_marginTop="13.33dp"
	            android:layout_marginBottom="13.33dp"
	            android:layout_marginLeft="46.67dp"
        		android:layout_marginRight="13.33dp"
	            android:textColor="@color/color_talk_time"
	            android:textSize="@dimen/talk_time_text_size" />
    	</LinearLayout>
    
    </RelativeLayout>

</RelativeLayout>