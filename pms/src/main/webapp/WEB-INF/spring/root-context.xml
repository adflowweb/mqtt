<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:jee="http://www.springframework.org/schema/jee"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:jms="http://www.springframework.org/schema/jms"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.1.xsd
		http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-4.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
		http://www.springframework.org/schema/jms http://www.springframework.org/schema/jms/spring-jms-3.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">


	<!-- Root Context: defines shared resources visible to all other web components -->

	<util:properties id="pms"
		location="file:/usr/share/ktp-tomcat/pms/config.properties" />

	<!-- ds Pms -->
	<bean id="dataSourcePms" class="org.springframework.jndi.JndiObjectFactoryBean"
		scope="singleton">
		<property name="jndiName">
			<value>java:comp/env/jdbc/pms</value>
		</property>
		<property name="resourceRef" value="true" />
	</bean>

	<bean id="transactionManagerPms"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSourcePms" />
	</bean>

	<bean id="sqlSessionFactoryPms" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSourcePms" />
		<property name="typeAliasesPackage" value="kr.co.adflow.pms.domain.mapper" />
		<property name="mapperLocations"
			value="classpath:kr/co/adflow/pms/domain/mapper/*.xml" />
	</bean>

	<bean id="dsScannerPms" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="kr.co.adflow.pms.domain.mapper" />
		<property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryPms" />
	</bean>

	<bean id="sqlSessionPms" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg name="sqlSessionFactory" ref="sqlSessionFactoryPms" />
	</bean>

	<!-- ds Push -->
	<bean id="dataSourcePush" class="org.springframework.jndi.JndiObjectFactoryBean"
		scope="singleton">
		<property name="jndiName">
			<value>java:comp/env/jdbc/push</value>
		</property>
		<property name="resourceRef" value="true" />
	</bean>

	<bean id="transactionManagerPush"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSourcePush" />
	</bean>

	<bean id="sqlSessionFactoryPush" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSourcePush" />
		<property name="typeAliasesPackage" value="kr.co.adflow.pms.domain.push.mapper" />
		<property name="mapperLocations"
			value="classpath:kr/co/adflow/pms/domain/push/mapper/*.xml" />
	</bean>

	<bean id="dsScannerPush" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="kr.co.adflow.pms.domain.push.mapper" />
		<property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryPush" />
	</bean>

	<bean id="sqlSessionPush" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg name="sqlSessionFactory" ref="sqlSessionFactoryPush" />
	</bean>


	<!-- jmsConnectionFactory -->
	<bean id="tJmsFactory" class="com.ibm.mq.jms.MQTopicConnectionFactory">
		<property name="connectionNameList"
			value="#{pms['mq.jms.hostname1']},#{pms['mq.jms.hostname6']},#{pms['mq.jms.hostname3']},#{pms['mq.jms.hostname8']},#{pms['mq.jms.hostname4']},#{pms['mq.jms.hostname7']},#{pms['mq.jms.hostname2']},#{pms['mq.jms.hostname5']}," />
		<!-- <property name="connectionNameList" -->
		<!-- value="#{pms['mq.jms.hostname5']},#{pms['mq.jms.hostname5']},#{pms['mq.jms.hostname5']},#{pms['mq.jms.hostname5']},#{pms['mq.jms.hostname5']},#{pms['mq.jms.hostname5']},#{pms['mq.jms.hostname5']},#{pms['mq.jms.hostname1']}," 
			/> -->

		<property name="queueManager" value="*" />
		<property name="transportType" value="1" />
		<property name="channel" value="#{pms['mq.jms.channel']}" />
	</bean>

	<bean id="tJmsCredentialsConnectionFactory"
		class="org.springframework.jms.connection.UserCredentialsConnectionFactoryAdapter">
		<property name="targetConnectionFactory" ref="tJmsFactory" />
		<property name="username" value="#{pms['mq.jms.username']}" />
		<property name="password" value="#{pms['mq.jms.password']}" />
	</bean>

	<!-- springConnectionFactory -->
	<bean id="tJmsConnectionFactory"
		class="org.springframework.jms.connection.CachingConnectionFactory">
		<property name="targetConnectionFactory" ref="tJmsCredentialsConnectionFactory" />
		<property name="sessionCacheSize" value="#{pms['mq.jms.session.cache.size']}" />

	</bean>

	<!-- dynamicDestinationResolver -->
	<bean id="tJmsDestinationResolver"
		class="org.springframework.jms.support.destination.DynamicDestinationResolver">
	</bean>

	<!-- jmsTemplate -->
	<bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
		<property name="connectionFactory" ref="tJmsConnectionFactory" />
		<property name="destinationResolver">
			<ref bean="tJmsDestinationResolver" />
		</property>
		<property name="pubSubDomain">
			<value>true</value>
		</property>
	</bean>

	<!-- <jms:listener-container> -->

	<!-- <jms:listener destination="queue.orders" ref="orderService" method="placeOrder"/> -->

	<!-- <jms:listener destination="queue.confirmations" ref="confirmationLogger" 
		method="log"/> -->

	<!-- </jms:listener-container> -->


	<!-- 1번 ack queue -->
	<bean id="qJmsFactory01" class="com.ibm.mq.jms.MQQueueConnectionFactory">
		<property name="connectionNameList"
			value="#{pms['mq.jms.hostname1']},#{pms['mq.jms.hostname5']}," />
		<property name="queueManager" value="*" />
		<property name="transportType" value="1" />
		<property name="channel" value="#{pms['mq.jms.channel']}" />
	</bean>

	<bean id="qJmsCredentialsConnectionFactory01"
		class="org.springframework.jms.connection.UserCredentialsConnectionFactoryAdapter">
		<property name="targetConnectionFactory" ref="qJmsFactory01" />
		<property name="username" value="#{pms['mq.jms.username']}" />
		<property name="password" value="#{pms['mq.jms.password']}" />
	</bean>

	<bean id="qJmsConnectionFactory01"
		class="org.springframework.jms.connection.CachingConnectionFactory">
		<property name="targetConnectionFactory" ref="qJmsCredentialsConnectionFactory01" />
		<property name="sessionCacheSize" value="#{pms['mq.jms.session.cache.size']}" />

	</bean>


	<bean id="qJmsContainer01"
		class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="qJmsConnectionFactory01" />
		<property name="destination" ref="qJmsDestination" />
		<property name="messageListener" ref="ackMessageDrivenBean" />
	</bean>


	<!-- 2번 ack queue -->
	<bean id="qJmsFactory02" class="com.ibm.mq.jms.MQQueueConnectionFactory">
		<property name="connectionNameList"
			value="#{pms['mq.jms.hostname2']},#{pms['mq.jms.hostname6']}," />
		<property name="queueManager" value="*" />
		<property name="transportType" value="1" />
		<property name="channel" value="#{pms['mq.jms.channel']}" />
	</bean>

	<bean id="qJmsCredentialsConnectionFactory02"
		class="org.springframework.jms.connection.UserCredentialsConnectionFactoryAdapter">
		<property name="targetConnectionFactory" ref="qJmsFactory02" />
		<property name="username" value="#{pms['mq.jms.username']}" />
		<property name="password" value="#{pms['mq.jms.password']}" />
	</bean>

	<bean id="qJmsConnectionFactory02"
		class="org.springframework.jms.connection.CachingConnectionFactory">
		<property name="targetConnectionFactory" ref="qJmsCredentialsConnectionFactory02" />
		<property name="sessionCacheSize" value="#{pms['mq.jms.session.cache.size']}" />

	</bean>


	<bean id="qJmsContainer02"
		class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="qJmsConnectionFactory02" />
		<property name="destination" ref="qJmsDestination" />
		<property name="messageListener" ref="ackMessageDrivenBean" />
	</bean>


	<!-- 3번 ack queue -->
	<bean id="qJmsFactory03" class="com.ibm.mq.jms.MQQueueConnectionFactory">
		<property name="connectionNameList"
			value="#{pms['mq.jms.hostname3']},#{pms['mq.jms.hostname7']}," />
		<property name="queueManager" value="*" />
		<property name="transportType" value="1" />
		<property name="channel" value="#{pms['mq.jms.channel']}" />
	</bean>

	<bean id="qJmsCredentialsConnectionFactory03"
		class="org.springframework.jms.connection.UserCredentialsConnectionFactoryAdapter">
		<property name="targetConnectionFactory" ref="qJmsFactory03" />
		<property name="username" value="#{pms['mq.jms.username']}" />
		<property name="password" value="#{pms['mq.jms.password']}" />
	</bean>

	<bean id="qJmsConnectionFactory03"
		class="org.springframework.jms.connection.CachingConnectionFactory">
		<property name="targetConnectionFactory" ref="qJmsCredentialsConnectionFactory03" />
		<property name="sessionCacheSize" value="#{pms['mq.jms.session.cache.size']}" />

	</bean>


	<bean id="qJmsContainer03"
		class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="qJmsConnectionFactory03" />
		<property name="destination" ref="qJmsDestination" />
		<property name="messageListener" ref="ackMessageDrivenBean" />
	</bean>




	<!-- 4번 ack queue -->
	<bean id="qJmsFactory04" class="com.ibm.mq.jms.MQQueueConnectionFactory">
		<property name="connectionNameList"
			value="#{pms['mq.jms.hostname4']},#{pms['mq.jms.hostname8']}," />
		<property name="queueManager" value="*" />
		<property name="transportType" value="1" />
		<property name="channel" value="#{pms['mq.jms.channel']}" />
	</bean>

	<bean id="qJmsCredentialsConnectionFactory04"
		class="org.springframework.jms.connection.UserCredentialsConnectionFactoryAdapter">
		<property name="targetConnectionFactory" ref="qJmsFactory04" />
		<property name="username" value="#{pms['mq.jms.username']}" />
		<property name="password" value="#{pms['mq.jms.password']}" />
	</bean>

	<bean id="qJmsConnectionFactory04"
		class="org.springframework.jms.connection.CachingConnectionFactory">
		<property name="targetConnectionFactory" ref="qJmsCredentialsConnectionFactory04" />
		<property name="sessionCacheSize" value="#{pms['mq.jms.session.cache.size']}" />

	</bean>


	<bean id="qJmsContainer04"
		class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="connectionFactory" ref="qJmsConnectionFactory04" />
		<property name="destination" ref="qJmsDestination" />
		<property name="messageListener" ref="ackMessageDrivenBean" />
	</bean>




	<!-- ack message driven bean -->
	<bean id="ackMessageDrivenBean" class="kr.co.adflow.pms.core.handler.AckMessageDrivenBean"></bean>

	<!-- ack queue name -->
	<bean id="qJmsDestination" class="com.ibm.mq.jms.MQQueue">
		<property name="baseQueueName">
			<value>#{pms['mq.jms.ack.queue.name']}</value>
		</property>
	</bean>


	<!-- Creates the JSR-303 Validator -->
	<bean id="validator"
		class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />

</beans>
