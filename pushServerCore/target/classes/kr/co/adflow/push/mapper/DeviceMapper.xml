<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.adflow.push.mapper.DeviceMapper">

	<select id="get" parameterType="java.lang.String" resultType="kr.co.adflow.push.domain.Device">
		SELECT * FROM device WHERE deviceid =
		#{deviceID}
	</select>

	<insert id="post" parameterType="kr.co.adflow.push.domain.Device">
		INSERT INTO
		device values(
		#{deviceID}, #{userID}, #{deviceInfo}, #{apnsToken}
		)
	</insert>

	<delete id="delete" parameterType="java.lang.String">
		DELETE from
		device
		WHERE
		deviceid=#{deviceID}
	</delete>
</mapper>	
	
	