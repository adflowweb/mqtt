<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativelayout_settings_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textView_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18.67dp"
            android:textSize="@dimen/settings_title_text_size"
            android:textColor="@color/color_settings_title"/>

        <TextView
            android:id="@+id/textView_settings_normal_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18.67dp"
            android:layout_toRightOf="@+id/textView_settings_title"
            android:gravity="right"
            android:visibility="gone"
            android:ellipsize="marquee"
            android:textSize="@dimen/settings_sub_text_size"
            android:textColor="@color/color_settings_sub"/>
        
        <CheckBox
            android:id="@+id/checkBox_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18.67dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone" />

        <SeekBar
            android:id="@+id/seekBar_settings_fontSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18.67dp"
            android:layout_marginRight="18.67dp"
            android:layout_below="@+id/textView_settings_title"
            android:max="10"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
    android:id="@+id/separate_settings_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/listSeparatorTextViewStyle" />

</RelativeLayout><!-- From: file:/Users/nadir93/git/mqtt/PMCClient/app/src/main/res/layout/item_settings_layout.xml -->