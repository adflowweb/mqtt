<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bns.pmc"
    android:versionCode="11"
    android:versionName="2.5.11">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <permission
        android:name="com.bns.pmc.READ"
        android:label="read pmc data"
        android:protectionLevel="normal" />
    <permission
        android:name="com.bns.pmc.WRITE"
        android:label="write pmc data"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_pmc_selector"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo">
        <activity
            android:name=".MainActivity"
            android:icon="@drawable/ic_pmc_launcher"
            android:label="@string/title_main_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewActivity"
            android:icon="@drawable/ic_pmc_launcher"
            android:label="@string/title_new_activity"></activity>
        <activity
            android:name=".TalkActivity"
            android:icon="@drawable/ic_pmc_launcher"
            android:label="@string/title_talk_activity">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:icon="@drawable/ic_pmc_launcher"
            android:label="@string/title_settings_activity"></activity>
        <activity
            android:name=".NotiPopupActivity"
            android:theme="@style/CustomNotiPopupTheme"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:excludeFromRecents="true"
            android:taskAffinity="" />

        <receiver android:name=".receiver.ServiceCaller$ServiceCallBR">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receiver.PMCReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="10">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.bns.pmc.action.newmsg.contact" />
            </intent-filter>
        </receiver>

        <service
            android:name=".receiver.PMCService"
            android:exported="false"
            android:enabled="true"></service>

        <provider
            android:name="com.bns.pmc.provider.DataProvider"
            android:authorities="com.bns.pmc"
            android:exported="true"
            android:readPermission="com.bns.pmc.READ"
            android:writePermission="com.bns.pmc.WRITE" />


    </application>

</manifest>
